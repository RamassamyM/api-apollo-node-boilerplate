{
  "name": "server",
  "version": "1.0.0",
  "description": "Server graphql api with graphql-yoga by Michael Ramassamy",
  "main": "src/app.js",
  "author": "Michael Ramassamy",
  "license": "proprietary",
  "private": true,
  "scripts": {
    "dev": "nodemon src/app.js --exec babel-node",
    "clean": "rm -rf build && mkdir build",
    "build": "cross-env NODE_ENV=production yarn run clean && ./node_modules/.bin/babel src --out-dir ./build --copy-files",
    "heroku-postbuild": "yarn run build && bash release.sh",
    "start": "cross-env NODE_ENV=production yarn run start:single",
    "start:single": "node server.js",
    "start:deamon": "pm2 start server.js",
    "stop": "pm2 stop server.js",
    "logs": "pm2 logs",
    "eslint": "eslint src",
    "test": "cross-env NODE_ENV=test jest --watch"
  },
  "engines": {
    "node": ">=12.4.0",
    "yarn": "^1.19.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.3",
    "@babel/core": "^7.6.3",
    "babel-jest": "^26.0.1",
    "consola": "^2.5.6",
    "debug": "^4.1.1",
    "documentation": "^9.3.1",
    "eslint": "^5.15.3",
    "eslint-config-standard": "^12.0.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-plugin-html": "^5.0.3",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "jest": "^26.0.1",
    "jsdoc": "^3.5.5",
    "nodemailer-mock": "^1.5.2",
    "nodemon": "^1.18.10"
  },
  "dependencies": {
    "@babel/node": "^7.6.3",
    "@babel/preset-env": "^7.6.3",
    "apollo-server-errors": "^2.3.1",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.4",
    "cookie-session": "^1.3.3",
    "core-js": "^3.1.4",
    "cross-env": "^5.2.0",
    "dotenv": "7.0.0",
    "graphql-constraint-directive": "^1.4.0",
    "graphql-disable-introspection": "^1.1.0",
    "graphql-type-json": "^0.3.0",
    "graphql-yoga": "^1.18.1",
    "helmet": "^3.16.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.11",
    "merge-graphql-schemas": "^1.5.8",
    "moment": "^2.24.0",
    "mongoose": "^5.4.20",
    "mongoose-data-seed": "^2.1.6",
    "morgan": "^1.9.1",
    "nodemailer": "^5.1.1",
    "passport": "^0.4.0",
    "passport-facebook": "^3.0.0",
    "passport-facebook-token": "^3.3.0",
    "passport-google-oauth": "^1.0.0",
    "passport-google-token": "^0.1.2",
    "passport-jwt": "^4.0.0",
    "passport-ldapauth": "^2.1.2",
    "pm2": "^3.4.0",
    "regenerator-runtime": "^0.13.3",
    "shortid": "^2.2.14",
    "uuid": "^7.0.3"
  },
  "nodemonConfig": {
    "ext": "js,json,graphql"
  },
  "mdSeed": {
    "seedersFolder": "./seeders"
  }
}
